<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="backgroundTint">@color/colorTextPrimary</item>
    </style>

    <style name="AppLabelStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorTextLabel</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
        <item name="editTextStyle">@style/AppEditTextStyle</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:itemBackground">@drawable/item_menu_bg</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.MyAppTheme</item>
    </style>

    <style name="ActionBar.Solid.MyAppTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/bottom_border</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="backgroundTint">@color/colorTextPrimary</item>
    </style>


    <style name="AppButton" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/ripple_green_button</item>
        <item name="android:textColor">@color/colorItems</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">true</item>
        <item name="android:paddingRight">@dimen/button_padding_right_left</item>
        <item name="android:paddingLeft">@dimen/button_padding_right_left</item>
    </style>


    <style name="AppRedButton" parent="AppButton">
        <item name="android:background">@drawable/button_coin_sell</item>
    </style>

</resources>
