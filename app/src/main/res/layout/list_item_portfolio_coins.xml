<com.daimajia.swipe.SwipeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    >

    <!-- Bottom View Start-->
    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="160dp"
        android:weightSum="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/buy"
            android:background="@drawable/button_coin_buy"
            android:text="@string/portfolio_coin_buy"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/sell"
            android:background="@drawable/button_coin_sell"
            android:text="@string/portfolio_coin_sell"
            />

        <!--What you want to show-->
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/conversation_list_row"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:paddingStart="8dp"
        android:paddingTop="1.5dp"
        android:paddingBottom="1.5dp"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryDark">


        <android.support.constraint.Guideline
            android:id="@+id/line_1"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="83dp"
            tools:layout_editor_absoluteX="136dp" />
        <android.support.constraint.Guideline
            android:id="@+id/line_2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="83dp"
            tools:layout_editor_absoluteX="264dp" />
        <android.support.constraint.Guideline
            android:id="@+id/line_3"
            android:orientation="vertical"
            app:layout_constraintGuide_end="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="83dp"
            tools:layout_editor_absoluteX="374dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorTextPrimary"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Polonex"
            android:id="@+id/coin_exchange"
            style="@style/AppLabelStyle"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/coin_symbol"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/line_1"
            app:layout_constraintVertical_chainStyle="packed"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="BTC"
            android:id="@+id/coin_symbol"
            android:layout_marginTop="5dp"

            app:layout_constraintTop_toBottomOf="@+id/coin_exchange"
            app:layout_constraintBottom_toTopOf="@+id/coin_original"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/line_1"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="org"
            style="@style/AppLabelStyle"
            android:layout_marginTop="5dp"
            android:id="@+id/coin_original"

            app:layout_constraintTop_toBottomOf="@+id/coin_symbol"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="bal"
            style="@style/AppLabelStyle"
            android:id="@+id/coin_original_balance"

            app:layout_constraintBaseline_toBaselineOf="@+id/coin_original"
            app:layout_constraintLeft_toRightOf="@+id/coin_original"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/price_of_coin"
            android:gravity="start"
            android:id="@+id/coin_price_label"
            style="@style/AppLabelStyle"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/coin_price"
            app:layout_constraintRight_toLeftOf="@+id/line_2"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@+id/line_1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="8500(+10%)"
            android:gravity="start"
            android:id="@+id/coin_price"
            android:layout_marginTop="5dp"

            app:layout_constraintTop_toBottomOf="@+id/coin_price_label"
            app:layout_constraintBottom_toTopOf="@+id/coin_holdings"
            app:layout_constraintRight_toLeftOf="@+id/line_2"
            app:layout_constraintLeft_toLeftOf="@+id/line_1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="345 987 USD"
            android:gravity="start"
            style="@style/AppLabelStyle"
            android:layout_marginTop="5dp"
            android:id="@+id/coin_holdings"

            app:layout_constraintTop_toBottomOf="@+id/coin_price"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/line_2"
            app:layout_constraintLeft_toLeftOf="@+id/line_1" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/portfolio_profit_24h"
            android:id="@+id/coin_profit_label"
            style="@style/AppLabelStyle"

            app:layout_constraintTop_toTopOf="@+id/coin_price_label"
            app:layout_constraintRight_toLeftOf="@+id/line_3"

            app:layout_constraintLeft_toLeftOf="@+id/line_2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="$654"
            android:id="@+id/coin_profit"
            android:textColor="@color/colorUpValue"

            app:layout_constraintTop_toTopOf="@+id/coin_price"
            app:layout_constraintRight_toLeftOf="@+id/line_3"
            app:layout_constraintLeft_toLeftOf="@+id/line_2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_more_vert_black_18px"
            android:gravity="center"

            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="28dp"/>



    </android.support.constraint.ConstraintLayout>

</com.daimajia.swipe.SwipeLayout>