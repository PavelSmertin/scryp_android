<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    android:id="@+id/conversation_list_row"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_margin="5dp"
    android:background="@drawable/bottom_border_black"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="date"
        android:id="@+id/transaction_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/transaction_description"
        android:layout_marginTop="10dp"
        android:id="@+id/description_label"

        style="@style/AppLabelStyle"

        app:layout_constraintTop_toBottomOf="@+id/transaction_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="description"
        android:layout_marginTop="5dp"
        android:id="@+id/description"

        app:layout_constraintTop_toBottomOf="@+id/description_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />




</android.support.constraint.ConstraintLayout>